ren":[{"type":"text","value":"Chúng ta cũng sẽ sử dụng k3d để thực hành. "},{"type":"element","tagName":"a","properties":{"href":"https://github.com/rancher/k3d#get","target":"_blank","rel":["noopener","noreferrer"]},"children":[{"type":"text","value":"Hướng dẫn cài đặt"}]},{"type":"text","value":" ở đây. Tôi đã kiểm thử tài liệu khóa học với phiên bản k3d 5.4.1."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"h4","properties":{"id":"lưu-y-về-lỗi-phan-quyền-với-k3d","style":"position:relative;"},"children":[{"type":"text","value":"Lưu ý về lỗi phân quyền với k3d"},{"type":"element","tagName":"a","properties":{"href":"#l%C6%B0u-y-v%E1%BB%81-l%E1%BB%97i-phan-quy%E1%BB%81n-v%E1%BB%9Bi-k3d","ariaLabel":"lưu y về lỗi phan quyền với k3d permalink","className":["anchor","after"]},"children":[{"type":"element","tagName":"svg","properties":{"ariaHidden":"true","focusable":"false","height":"16","version":"1.1","viewBox":"0 0 16 16","width":"16"},"children":[{"type":"element","tagName":"path","properties":{"fillRule":"evenodd","d":"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z"},"children":[]}]}]}]},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Bạn có thể gặp lỗi "},{"type":"element","tagName":"code","properties":{"className":["language-text"]},"children":[{"type":"text","value":"Permission denied"}]},{"type":"text","value":" khi sử dụng "},{"type":"element","tagName":"code","properties":{"className":["language-text"]},"children":[{"type":"text","value":"k3d"}]},{"type":"text","value":" với người dùng thông thường."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Hãy chắc chắn đã thực hiện "},{"type":"element","tagName":"a","properties":{"href":"https://docs.docker.com/engine/install/linux-postinstall/#manage-docker-as-a-non-root-user","target":"_blank","rel":["noopener","noreferrer"]},"children":[{"type":"text","value":"bước cấu hình sau cài đặt docker"}]}]},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Chạy "},{"type":"element","tagName":"code","properties":{"className":["language-text"]},"children":[{"type":"text","value":"k3d"}]},{"type":"text","value":" với "},{"type":"element","tagName":"code","properties":{"className":["language-text"]},"children":[{"type":"text","value":"sudo"}]},{"type":"text","value":" sẽ dẫn đến các vấn đề như tạo kubeconfig ở sai vị trí, ví dụ không phải ở "},{"type":"element","tagName":"em","properties":{},"children":[{"type":"text","value":"~/.kube"}]},{"type":"text","value":"."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"h2","properties":{"id":"lỗi-va-dong-gop","style":"position:relative;"},"children":[{"type":"text","value":"Lỗi và đóng góp"},{"type":"element","tagName":"a","properties":{"href":"#l%E1%BB%97i-va-dong-gop","ariaLabel":"lỗi va dong gop permalink","className":["anchor","after"]},"children":[{"type":"element","tagName":"svg","properties":{"ariaHidden":"true","focusable":"false","height":"16","version":"1.1","viewBox":"0 0 16 16","width":"16"},"children":[{"type":"element","tagName":"path","properties":{"fillRule":"evenodd","d":"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z"},"children":[]}]}]}]},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Bạn có phát hiện lỗi, vấn đề, lỗi chính tả, hoặc thiếu sót gì không? Có thể bạn nghĩ rằng một phần nào đó chưa được viết tốt và bạn có thể làm tốt hơn? Đang là Hacktoberfest? Hoặc bạn muốn chia sẻ một bài blog hay? Hãy đóng góp nhé!"}]},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Vì khóa học là mã nguồn mở, bạn có thể fork, chỉnh sửa và gửi pull request. Nếu bạn chưa biết fork là gì hoặc cách gửi pull request, hãy tham khảo "},{"type":"element","tagName":"a","properties":{"href":"https://guides.github.com/activities/hello-world/","target":"_blank","rel":["noopener","noreferrer"]},"children":[{"type":"text","value":"hướng dẫn GitHub"}]},{"type":"text","value":". Bạn có thể thực hành tại đây."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Nếu bạn không muốn tên mình xuất hiện trong danh sách "},{"type":"element","tagName":"a","properties":{"href":"https://github.com/kubernetes-hy/kubernetes-hy.github.io/graphs/contributors","target":"_blank","rel":["noopener","noreferrer"]},"children":[{"type":"text","value":"contributors"}]},{"type":"text","value":" bạn cũng có thể tạo issue. Hướng dẫn tạo issue trên GitHub "},{"type":"element","tagName":"a","properties":{"href":"https://help.github.com/en/articles/creating-an-issue","target":"_blank","rel":["noopener","noreferrer"]},"children":[{"type":"text","value":"ở đây"}]},{"type":"text","value":"."}]},{"type":"text","value":"\n"},{"type":"element","tagName":"p","properties":{},"children":[{"type":"text","value":"Đây là liên kết tới repository để bạn tìm tab issues và pull requests: "},{"type":"element","tagName":"a","properties":{"href":"https://github.com/kubernetes-hy/kubernetes-hy.github.io","target":"_blank","rel":["noopener","noreferrer"]},"children":[{"type":"text","value":"https://github.com/kubernetes-hy/kubernetes-hy.github.io"}]}]}],"data":{"quirksMode":false}},"html":"<h3 id=\"yeu-cầu-tien-quyết\" style=\"position:relative;\">Yêu cầu tiên quyết<a href=\"#yeu-c%E1%BA%A7u-tien-quy%E1%BA%BFt\" aria-label=\"yeu cầu tien quyết permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h3>\n<p>Người học được kỳ vọng đã hoàn thành <a href=\"https://devopswithdocker.com\" target=\"_blank\" rel=\"noopener noreferrer\">DevOps with Docker</a> hoặc có kinh nghiệm với Docker và docker compose. Ngoài ra, cần có kinh nghiệm phát triển web, ví dụ như <a href=\"https://fullstackopen.com/en/\" target=\"_blank\" rel=\"noopener noreferrer\">Full Stack Web Development</a> hoặc tương đương. Người học cần có quyền admin/superuser để hoàn thành các bài tập và ví dụ trong tài liệu trên máy tính của mình.</p>\n<h3 id=\"tai-liệu-khoa-học\" style=\"position:relative;\">Tài liệu khóa học<a href=\"#tai-li%E1%BB%87u-khoa-h%E1%BB%8Dc\" aria-label=\"tai liệu khoa học permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h3>\n<p>Tài liệu khóa học được thiết kế để đọc từng phần từ đầu đến cuối. Tài liệu chứa các bài tập, được đặt sao cho phần trước đó cung cấp đủ thông tin để giải quyết từng bài tập. Hãy làm bài tập khi bạn đọc qua tài liệu. Khi tiến xa hơn, bạn sẽ ngày càng phải tìm kiếm thông tin trên internet. Bạn cũng nên bổ sung kiến thức bằng <a href=\"https://kubernetes.io/docs/home/\" target=\"_blank\" rel=\"noopener noreferrer\">tài liệu chính thức</a>!</p>\n<p>Tài liệu khóa học được viết trên Mac, vì vậy một số hướng dẫn có thể thiếu chi tiết dành riêng cho từng nền tảng. Nếu bạn phát hiện lỗi hoặc muốn bổ sung gì đó, hãy gửi pull request cho tài liệu khóa học. Bạn cũng có thể tạo issue qua GitHub nếu phát hiện vấn đề với tài liệu.</p>\n<h2 id=\"hoan-thanh-va-chấm-diểm\" style=\"position:relative;\">Hoàn thành và chấm điểm<a href=\"#hoan-thanh-va-ch%E1%BA%A5m-di%E1%BB%83m\" aria-label=\"hoan thanh va chấm diểm permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h2>\n<p>Để hoàn thành khóa học, hãy hoàn thành các bài tập ở phần 1-5 trước hạn chót là ngày 31 tháng 1 năm 2025.</p>\n<p>Tổng khối lượng công việc của khóa học khoảng 100 giờ tùy theo nền tảng của bạn.</p>\n<p>Khóa học có 5 tín chỉ ECTS. Tổng số bài tập là 49, điểm số sẽ phụ thuộc vào số lượng bài tập bạn đã nộp:</p>\n<table>\n<thead>\n<tr>\n<th>điểm</th>\n<th>số bài tập</th>\n</tr>\n</thead>\n<tbody>\n<tr>\n<td>5</td>\n<td>47</td>\n</tr>\n<tr>\n<td>4</td>\n<td>42</td>\n</tr>\n<tr>\n<td>3</td>\n<td>37</td>\n</tr>\n<tr>\n<td>2</td>\n<td>32</td>\n</tr>\n<tr>\n<td>1</td>\n<td>27</td>\n</tr>\n</tbody>\n</table>\n<h3 id=\"bai-tập\" style=\"position:relative;\">Bài tập<a href=\"#bai-t%E1%BA%ADp\" aria-label=\"bai tập permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h3>\n<p>Hãy tạo một repository trên GitHub và đăng các lời giải của bạn vào các file/thư mục được sắp xếp rõ ràng. Nếu bạn cần trợ giúp sử dụng Git, hãy tham khảo <a href=\"https://guides.github.com/activities/hello-world/\" target=\"_blank\" rel=\"noopener noreferrer\">hướng dẫn</a>. Đảm bảo rằng repository của bạn có thể truy cập được với tôi. Chúng tôi ưu tiên repository công khai, nhưng nếu bạn muốn giữ bí mật, bạn có thể tạo repository riêng tư và thêm <a href=\"https://github.com/mluukkai\" target=\"_blank\" rel=\"noopener noreferrer\">mluukkai</a> làm cộng tác viên.</p>\n<p>Hầu hết các bài tập sẽ yêu cầu bạn viết mã hoặc xuất bản gì đó lên Docker Hub. Nếu bạn không chắc nên nộp gì, hãy hỏi trong kênh chat của khóa học.</p>\n<p>Một hệ thống phát hiện đạo văn sẽ được sử dụng để kiểm tra các bài tập nộp lên GitHub. Nếu nhiều sinh viên nộp cùng một mã, vấn đề sẽ được xử lý theo <a href=\"https://studies.helsinki.fi/instructions/article/what-cheating-and-plagiarism\" target=\"_blank\" rel=\"noopener noreferrer\">quy định về gian lận và đạo văn</a> của Đại học Helsinki.</p>\n<p>Mỗi phần có nhiều bài tập. Sau khi hoàn thành một phần, hãy sử dụng <a href=\"https://studies.cs.helsinki.fi/stats/courses/kubernetes2024\" target=\"_blank\" rel=\"noopener noreferrer\">hệ thống nộp bài</a>. Lưu ý rằng bạn <strong>không thể</strong> chỉnh sửa bài nộp sau đó, vì vậy hãy cân nhắc trước số lượng bài tập bạn muốn hoàn thành cho mỗi phần.</p>\n<h2 id=\"tin-dụng-google-cloud\" style=\"position:relative;\">Tín dụng Google Cloud<a href=\"#tin-d%E1%BB%A5ng-google-cloud\" aria-label=\"tin dụng google cloud permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h2>\n<p>Ở phần 3, chúng ta sẽ sử dụng Google Kubernetes Engine. Dịch vụ này không miễn phí, nhưng mỗi người bắt đầu với Google Cloud sẽ có 300 đô la tín dụng miễn phí. Xem các lựa chọn của bạn <a href=\"https://cloud.google.com/free\" target=\"_blank\" rel=\"noopener noreferrer\">tại đây</a>.</p>\n<p>Nếu bạn đã sử dụng hết 300 đô la tín dụng Google Cloud, chúng tôi không thể hỗ trợ thêm. Bạn có thể hoàn thành phần 1-2 và có thể cả phần 4-5, nhưng phần 3 là bắt buộc để hoàn thành khóa học với điểm cao hơn.</p>\n<p>Bạn cũng có thể sử dụng nhà cung cấp đám mây khác nhưng chúng tôi không có hướng dẫn cho các nhà cung cấp khác.</p>\n<h2 id=\"bắt-dầu\" style=\"position:relative;\">Bắt đầu<a href=\"#b%E1%BA%AFt-d%E1%BA%A7u\" aria-label=\"bắt dầu permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h2>\n<h3 id=\"discord\" style=\"position:relative;\">Discord<a href=\"#discord\" aria-label=\"discord permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h3>\n<p>Khóa học này có một nhóm Discord nơi chúng ta thảo luận mọi thứ về khóa học. Hỗ trợ gần như 24/7, với các cuộc thảo luận bằng cả tiếng Anh và tiếng Phần Lan.</p>\n<p>Tham gia kênh Discord DevOps with Kubernetes: <a href=\"https://study.cs.helsinki.fi/discord/join/kubernetes\" target=\"_blank\" rel=\"noopener noreferrer\">https://study.cs.helsinki.fi/discord/join/kubernetes</a>.</p>\n<p><strong>Mọi</strong> bình luận không phù hợp, xúc phạm hoặc phân biệt đối xử trên kênh đều bị cấm và sẽ bị xử lý.</p>\n<h3 id=\"cai-dặt-kubectl\" style=\"position:relative;\">Cài đặt kubectl<a href=\"#cai-d%E1%BA%B7t-kubectl\" aria-label=\"cai dặt kubectl permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h3>\n<p>Kubectl là công cụ dòng lệnh mà chúng ta sẽ sử dụng để giao tiếp với cụm Kubernetes. <a href=\"https://kubernetes.io/docs/tasks/tools/install-kubectl/\" target=\"_blank\" rel=\"noopener noreferrer\">Hướng dẫn cài đặt</a></p>\n<h3 id=\"cai-dặt-k3d\" style=\"position:relative;\">Cài đặt k3d<a href=\"#cai-d%E1%BA%B7t-k3d\" aria-label=\"cai dặt k3d permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h3>\n<p>Chúng ta cũng sẽ sử dụng k3d để thực hành. <a href=\"https://github.com/rancher/k3d#get\" target=\"_blank\" rel=\"noopener noreferrer\">Hướng dẫn cài đặt</a> ở đây. Tôi đã kiểm thử tài liệu khóa học với phiên bản k3d 5.4.1.</p>\n<h4 id=\"lưu-y-về-lỗi-phan-quyền-với-k3d\" style=\"position:relative;\">Lưu ý về lỗi phân quyền với k3d<a href=\"#l%C6%B0u-y-v%E1%BB%81-l%E1%BB%97i-phan-quy%E1%BB%81n-v%E1%BB%9Bi-k3d\" aria-label=\"lưu y về lỗi phan quyền với k3d permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h4>\n<p>Bạn có thể gặp lỗi <code class=\"language-text\">Permission denied</code> khi sử dụng <code class=\"language-text\">k3d</code> với người dùng thông thường.</p>\n<p>Hãy chắc chắn đã thực hiện <a href=\"https://docs.docker.com/engine/install/linux-postinstall/#manage-docker-as-a-non-root-user\" target=\"_blank\" rel=\"noopener noreferrer\">bước cấu hình sau cài đặt docker</a></p>\n<p>Chạy <code class=\"language-text\">k3d</code> với <code class=\"language-text\">sudo</code> sẽ dẫn đến các vấn đề như tạo kubeconfig ở sai vị trí, ví dụ không phải ở <em>~/.kube</em>.</p>\n<h2 id=\"lỗi-va-dong-gop\" style=\"position:relative;\">Lỗi và đóng góp<a href=\"#l%E1%BB%97i-va-dong-gop\" aria-label=\"lỗi va dong gop permalink\" class=\"anchor after\"><svg aria-hidden=\"true\" focusable=\"false\" height=\"16\" version=\"1.1\" viewBox=\"0 0 16 16\" width=\"16\"><path fill-rule=\"evenodd\" d=\"M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z\"></path></svg></a></h2>\n<p>Bạn có phát hiện lỗi, vấn đề, lỗi chính tả, hoặc thiếu sót gì không? Có thể bạn nghĩ rằng một phần nào đó chưa được viết tốt và bạn có thể làm tốt hơn? Đang là Hacktoberfest? Hoặc bạn muốn chia sẻ một bài blog hay? Hãy đóng góp nhé!</p>\n<p>Vì khóa học là mã nguồn mở, bạn có thể fork, chỉnh sửa và gửi pull request. Nếu bạn chưa biết fork là gì hoặc cách gửi pull request, hãy tham khảo <a href=\"https://guides.github.com/activities/hello-world/\" target=\"_blank\" rel=\"noopener noreferrer\">hướng dẫn GitHub</a>. Bạn có thể thực hành tại đây.</p>\n<p>Nếu bạn không muốn tên mình xuất hiện trong danh sách <a href=\"https://github.com/kubernetes-hy/kubernetes-hy.github.io/graphs/contributors\" target=\"_blank\" rel=\"noopener noreferrer\">contributors</a> bạn cũng có thể tạo issue. Hướng dẫn tạo issue trên GitHub <a href=\"https://help.github.com/en/articles/creating-an-issue\" target=\"_blank\" rel=\"noopener noreferrer\">ở đây</a>.</p>\n<p>Đây là liên kết tới repository để bạn tìm tab issues và pull requests: <a href=\"https://github.com/kubernetes-hy/kubernetes-hy.github.io\" target=\"_blank\" rel=\"noopener noreferrer\">https://github.com/kubernetes-hy/kubernetes-hy.github.io</a></p>","frontmatter":{"path":"/part-0/1-intro-vi","title":"Giới thiệu khóa học"},"fileAbsolutePath":"/home/runner/work/dwk2024/dwk2024/data/part-0/1-intro-vi.md"},"allPages":{"edges":[{"node":{"id":"5225f2a2-20f9-50ce-93ac-7b38f3105103","frontmatter":{"path":"/faq","title":"FAQ"},"moocfiExercises":[]}},{"node":{"id":"e1ed6713-5992-5f7f-95a1-17efd97f57d8","frontmatter":{"path":"/frontmatter-guide","title":"Frontmatter-guide"},"moocfiExercises":[]}},{"node":{"id":"7e706a38-3828-5118-bdec-3705a319a1b0","frontmatter":{"path":"/faq-vi","title":"Câu hỏi thường gặp"},"moocfiExercises":[]}},{"node":{"id":"52d4cd1d-eb14-54f3-a18a-ef84b67c320d","frontmatter":{"path":"/index-en","title":"Homepage"},"moocfiExercises":[]}},{"node":{"id":"04c5ddbd-7839-580f-82da-bc9fdbb49f84","frontmatter":{"path":"/known-problems-solutions-vi","title":"Các vấn đề bạn có thể gặp phải"},"moocfiExercises":[]}},{"node":{"id":"3102d88f-7297-56fb-af03-27d1079fffd1","frontmatter":{"path":"/","title":"Trang chủ"},"moocfiExercises":[]}},{"node":{"id":"c92ea568-3384-5ff8-8dfa-b9015597780d","frontmatter":{"path":"/known-problems-solutions","title":"Issues you may face"},"moocfiExercises":[]}},{"node":{"id":"5e6b6ee0-b381-53f0-b84c-af378792b131","frontmatter":{"path":"/registration-and-completion","title":"Registration and Completion"},"moocfiExercises":[]}},{"node":{"id":"58688080-4aa8-54e6-8b8b-02de1c4f6410","frontmatter":{"path":"/unity-assignment","title":"Unity Assignment"},"moocfiExercises":[]}},{"node":{"id":"d9c993b6-f6b4-59a1-b119-f3b7218eec6b","frontmatter":{"path":"/sanasto","title":"Sanasto"},"moocfiExercises":[]}},{"node":{"id":"8a3ee5be-7557-5fcd-954b-2351e74cd585","frontmatter":{"path":"/part-0/1-intro-vi","title":"Giới thiệu khóa học"},"moocfiExercises":[]}},{"node":{"id":"23082016-7bbd-5215-8485-4ffccbf3ea1